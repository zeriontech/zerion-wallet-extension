{
  "name": "zerion-wallet",
  "version": "1.0.0-alpha.4",
  "description": "A web3 wallet extension",
  "scripts": {
    "start": "npm-run-all --parallel start:app type-check:watch",
    "start:app": "parcel watch src/manifest.json --no-hmr --no-content-hash",
    "build:workaround": "parcel watch src/manifest.json --no-hmr --no-content-hash",
    "build:broken": "parcel build src/manifest.json --no-content-hash --no-scope-hoist",
    "build": "npm run build:workaround",
    "tagAndPushBuild": "node scripts/tag-and-push-build.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --pretty --watch",
    "test": "jest",
    "ui-lab": "parcel serve src/ui-lab/index.html --config ./src/ui-lab/parcel.lab.config",
    "posttest": "npm run format",
    "lint": "eslint . --cache --fix --ext .ts,.tsx,.js",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "prepare": "husky install"
  },
  "alias": {
    "src": "./src",
    "ui-lab:./src/ui/shared/channels.ts": "./src/ui/shared/channels.mock.ts",
    "ui-lab:webextension-polyfill": "/src/ui-lab/webextension-polyfill.mock.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zeriontech/zerion-wallet-extension.git"
  },
  "keywords": [
    "Wallet",
    "Web3",
    "Browser",
    "Wallet"
  ],
  "author": "everdimension <everdimension@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeriontech/zerion-wallet-extension/issues"
  },
  "homepage": "https://github.com/zeriontech/zerion-wallet-extension#readme",
  "devDependencies": {
    "@parcel/config-webextension": "^2.6.0",
    "@parcel/transformer-inline-string": "^2.6.0",
    "@parcel/transformer-svg-react": "^2.6.0",
    "@types/canvas-confetti": "^1.4.3",
    "@types/chrome": "^0.0.195",
    "@types/jest": "^28.1.3",
    "@types/lodash": "^4.14.184",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/socket.io-client": "^1.4.35",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^8.14.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "gh-pages": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^28.1.1",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.0",
    "prettier": "^2.6.2",
    "process": "^0.11.10",
    "ts-jest": "^28.0.5",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@download/blockies": "^1.0.3",
    "@json-rpc-tools/provider": "^1.7.6",
    "@json-rpc-tools/utils": "^1.7.6",
    "@metamask/browser-passworder": "^3.0.0",
    "@store-unit/react": "^1.0.1",
    "@tanstack/react-virtual": "^3.0.0-beta.18",
    "bignumber.js": "^9.1.0",
    "buffer": "^6.0.3",
    "canvas-confetti": "^1.5.1",
    "capitalize-ts": "^1.0.0",
    "classnames": "^2.3.1",
    "copy-to-clipboard": "^3.3.2",
    "defi-sdk": "^0.1.0-alpha.41",
    "ethers": "^5.7.0",
    "events": "^3.3.0",
    "immer": "^9.0.15",
    "is-truthy-ts": "^1.0.1",
    "lodash": "^4.17.21",
    "memoize-one": "^6.0.0",
    "nanoevents": "^7.0.1",
    "nanoid": "^4.0.0",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-area": "^0.1.1-alpha.6",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.2",
    "react-router-dom": "^6.3.0",
    "store-unit": "^1.0.3",
    "webextension-polyfill": "^0.10.0"
  }
}
