{
  "name": "zerion-wallet",
  "version": "1.0.2",
  "description": "A web3 wallet extension",
  "scripts": {
    "prestart": "node scripts/verifyDotEnv.cjs",
    "start": "npm-run-all --parallel start:app type-check:watch",
    "start:app": "parcel watch src/manifest.json src/ui/hardware-wallet/ledger.html --no-hmr --no-content-hash --no-autoinstall",
    "build": "echo \"Please run 'npm run build:production' instead\" && exit 1",
    "build:production": "node scripts/build.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --pretty --watch",
    "test": "jest",
    "ui-lab": "parcel serve src/ui-lab/index.html --config ./src/ui-lab/parcel.lab.config",
    "lint": "eslint . --cache --fix --ext .ts,.tsx,.js",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "prepare": "husky install",
    "postversion": "node ./scripts/manifest-version.js"
  },
  "alias": {
    "src": "./src",
    "ui-lab:src/ui/shared/channels": "./src/ui/shared/channels.mock.ts",
    "ui-lab:src/modules/networks/networks-store.client": "./src/modules/networks/networks-store.client.mock.ts",
    "buffer-todo-set-to-false": false,
    "ui-lab:webextension-polyfill": "/src/ui-lab/webextension-polyfill.mock.ts"
  },
  "@parcel/bundler-default": {
    "minBundles": 10000000,
    "minBundleSize": 3000,
    "maxParallelRequests": 20
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zeriontech/zerion-wallet-extension.git"
  },
  "keywords": [
    "Wallet",
    "Web3",
    "Browser",
    "Wallet"
  ],
  "author": "everdimension <everdimension@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeriontech/zerion-wallet-extension/issues"
  },
  "homepage": "https://github.com/zeriontech/zerion-wallet-extension#readme",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/config-webextension": "^2.9.3",
    "@parcel/optimizer-data-url": "^2.9.3",
    "@parcel/transformer-inline-string": "^2.9.3",
    "@parcel/transformer-svg-react": "^2.9.3",
    "@tanstack/eslint-plugin-query": "^4.29.9",
    "@types/canvas-confetti": "^1.6.0",
    "@types/chrome": "^0.0.239",
    "@types/dom-navigation": "^1.0.1",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.3",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@types/socket.io-client": "^1.4.36",
    "@types/uuid": "^9.0.2",
    "@types/w3c-web-usb": "^1.0.7",
    "@types/webextension-polyfill": "^0.10.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^8.44.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.9.3",
    "prettier": "^2.8.8",
    "process": "^0.11.10",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@download/blockies": "^1.0.3",
    "@json-rpc-tools/provider": "^1.7.6",
    "@json-rpc-tools/utils": "^1.7.6",
    "@react-spring/web": "^9.7.3",
    "@store-unit/react": "^1.0.4",
    "@tanstack/react-query": "^4.35.3",
    "@tanstack/react-virtual": "^3.0.0-beta.54",
    "@zeriontech/components": "^1.0.1",
    "@zeriontech/hardware-wallet-connection": "^1.0.10",
    "@zeriontech/transactions": "^0.0.7",
    "bignumber.js": "^9.1.1",
    "buffer": "^6.0.3",
    "canvas-confetti": "^1.6.0",
    "capitalize-ts": "^1.0.0",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.9",
    "defi-sdk": "^0.1.0-alpha.72",
    "downshift": "^7.6.0",
    "ethers": "^5.7.2",
    "events": "^3.3.0",
    "immer": "^10.0.2",
    "is-truthy-ts": "^1.0.1",
    "ky": "^0.33.3",
    "lodash": "^4.17.21",
    "memoize-one": "^6.0.0",
    "nanoevents": "^8.0.0",
    "nanoid": "^4.0.2",
    "normalize.css": "^8.0.1",
    "normalized-contains": "^1.0.0",
    "react": "^18.2.0",
    "react-area": "^0.1.1-alpha.6",
    "react-dom": "^18.2.0",
    "react-qrcode-logo": "^2.9.0",
    "react-router-dom": "^6.18.0",
    "rlp": "^3.0.0",
    "store-unit": "^1.0.3",
    "uuid": "^9.0.0",
    "webextension-polyfill": "^0.10.0"
  }
}
