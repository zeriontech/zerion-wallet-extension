{
  "name": "zerion-wallet",
  "version": "0.0.1",
  "description": "A web3 wallet extension",
  "scripts": {
    "start": "npm-run-all --parallel start:app type-check:watch",
    "start:app": "parcel watch src/manifest.json",
    "build": "parcel build src/manifest.json",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --pretty --watch",
    "pretest": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "posttest": "npm run format",
    "lint": "eslint . --cache --fix --ext .ts,.tsx,.js",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zeriontech/zerion-wallet-extension.git"
  },
  "keywords": [
    "Wallet",
    "Web3",
    "Browser",
    "Wallet"
  ],
  "author": "everdimension <everdimension@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeriontech/zerion-wallet-extension/issues"
  },
  "homepage": "https://github.com/zeriontech/zerion-wallet-extension#readme",
  "alias": {
    "src": "./src"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.6.0",
    "@parcel/transformer-inline-string": "^2.6.0",
    "@parcel/transformer-svg-react": "^2.6.0",
    "@types/canvas-confetti": "^1.4.2",
    "@types/chrome": "^0.0.183",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/socket.io-client": "^1.4.35",
    "@types/webextension-polyfill": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^8.14.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.0",
    "prettier": "^2.6.2",
    "process": "^0.11.10",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@download/blockies": "^1.0.3",
    "@json-rpc-tools/provider": "^1.7.6",
    "@json-rpc-tools/utils": "^1.7.6",
    "@metamask/browser-passworder": "^3.0.0",
    "@store-unit/react": "^1.0.1",
    "buffer": "^6.0.3",
    "canvas-confetti": "^1.5.1",
    "capitalize-ts": "^1.0.0",
    "classnames": "^2.3.1",
    "defi-sdk": "^0.1.0-alpha.39",
    "ethers": "^5.6.4",
    "events": "^3.3.0",
    "immer": "^9.0.12",
    "is-truthy-ts": "^1.0.1",
    "lodash": "^4.17.21",
    "nanoevents": "^6.0.2",
    "nanoid": "^3.3.4",
    "normalize.css": "^8.0.1",
    "react": "^18.1.0",
    "react-area": "^0.1.1-alpha.6",
    "react-dom": "^18.1.0",
    "react-query": "^3.38.0",
    "react-router-dom": "^6.3.0",
    "store-unit": "^1.0.3",
    "webextension-polyfill": "^0.9.0"
  }
}
