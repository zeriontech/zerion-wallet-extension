{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "version": "0.0.1",
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/logo-icon-16.png",
    "32": "images/logo-icon-32.png",
    "48": "images/logo-icon-48.png",
    "128": "images/logo-icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/logo-icon-16.png",
      "32": "images/logo-icon-32.png",
      "48": "images/logo-icon-48.png",
      "128": "images/logo-icon-128.png"
    },
    "default_title": "NewWallet",
    "default_popup": "ui/popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  },
  "author": "https://zerion.io/",
  "background": {
    "page": "background/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["content-script/index.ts"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "unlimitedStorage", "activeTab", "notifications"]
}
